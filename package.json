{
  "name": "music-kitten",
  "version": "2.1.0",
  "description": "Use your own soundtrack in Counter-Strike: Global Offensive",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "test": "electron-builder --dir",
    "dist": "electron-builder -mwl --x64 --publish=always",
    "distWin": "electron-builder --win --x64 --ia32",
    "disMac": "electron-builder --mac",
    "disLin": "electron-builder --linux"
  },
  "repository": "https://github.com/CorySanin/Kitten-for-CSGO",
  "homepage": "https://www.musickitten.net",
  "keywords": [
    "CS:GO",
    "music",
    "kit",
    "counter strike",
    "source"
  ],
  "author": {
    "name": "Cory Sanin",
    "email":   "coryaccounts@outlook.com"
  },
  "license": "GPL-3.0",
  "dependencies": {
    "electron-updater": "3.1.2",
    "fs-extra": "7.0.0",
    "http-shutdown": "1.2.0",
    "@node-steam/vdf": "2.0.1",
    "winreg": "1.2.4",
    "download": "7.1.0",
    "decompress": "4.2.0",
    "howler": "2.0.15"
  },
  "devDependencies": {
    "electron": "~>2.0.3",
    "electron-builder": "~>20.28.3"
  },
  "build": {
    "appId": "net.musickitten.app",
    "productName": "Music Kitten",
    "mac": {
      "category": "public.app-category.entertainment",
      "icon": "icon/icon.icns",
      "type": "distribution",
      "publish": {
        "provider": "github",
        "releaseType": "draft"
      }
    },
    "win": {
      "icon": "icon/icon.ico",
      "target": "nsis",
      "publish": {
        "provider": "github",
        "releaseType": "draft"
      }
    },
    "nsis": {
      "oneClick": false
    },
    "linux": {
      "target": "deb",
      "synopsis": "Use custom CS:GO music kits",
      "category": "Utility",
      "publish": {
        "provider": "github",
        "releaseType": "draft"
      }
    }
  },
  "dmg": {
    "title": "Music Kitten",
    "icon": "icon/dmgicon.icns",
    "contents": [
      {
        "x": 375,
        "y": 225,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 150,
        "y": 225,
        "type": "file",
        "path": ""
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowElevation": true,
    "createDesktopShortcut": false,
    "menuCategory": "WORM\\Kitten",
    "shortcutName": "Music Kitten"
  }
}
